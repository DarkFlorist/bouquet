{
	"compilerOptions": {
		"target": "ES2022",
		"module": "Node16",
		"moduleResolution": "Node16",
		"rootDir": "./build",
		"inlineSourceMap": true,
		"declaration": false,

		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"lib": [ "ES2020" ],
		"typeRoots": [ "./node_modules/@types" ],
		"types": [ "node" ],
	},
	"include": [ "./build/*.mts" ],
}
